@model FinalProject.Models.User

@{
    ViewBag.Title = "SignIn";
}

<!DOCTYPE html>

<html lang="he">
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" type="text/css" href="../../Content/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="../../Content/bootstrap-theme.css">
    <link rel="stylesheet" type="text/css" href="../../Content/Site.css">
    <title>title</title>
</head>
<body dir="rtl">
<div class="container">
    <form class="form-signin">
        <h2>אנא התחבר</h2>
        <label for="inputUserName" class="sr-only">שם משתמש</label>
        <input type="text" id="inputUserName" class="form-input form-control" placeholder="שם משתמש" required="" autofocus="">
        <label for="inputPassword" class="sr-only">סיסמא</label>
        <input type="password" id="inputPassword" class="form-control" placeholder="סיסמא" required="">
        <input class="login-btn btn btn-lg btn-primary btn-block" type="submit" value="התחבר"/>
    </form>
    <div>
        @Html.ActionLink("אין לך משתמש ? הירשם עכשיו", "Register")
    </div>
</div>
</body>
</html>