@model FinalProject.Models.Media

@{
    ViewBag.Title = "MovieDetails";
}

<body dir="rtl">
    <div class="site-content">
        <div class="row media-details-row">
            <div class="col-md-6 image-column">
                <img src="data:image/png;base64,@Html.DisplayFor(item => item.Image)" />
            </div>
            <div class="col-md-6 media-content">
                <h1>@Html.DisplayFor(item => item.HebrewTitle)</h1>
                <h4>@Html.DisplayFor(item => item.EnglishTitle)</h4>
                <div class="row">
                    <b> @Html.LabelFor(item => item.Length):</b>
                    @Html.DisplayFor(item => item.Length) דקות
                </div>
                <div class="row">
                    <b> @Html.LabelFor(item => item.Directors):</b>
                    @Html.DisplayFor(item => item.Directors)
                </div>
                <div class="row">
                    <b> @Html.LabelFor(item => item.Producers):</b>
                    @Html.DisplayFor(item => item.Producers)
                </div>
                <div class="row">
                    <b> @Html.LabelFor(item => item.Producers):</b>
                    @Html.DisplayFor(item => item.Producers)
                </div>
                <div class="row">
                    <b> @Html.LabelFor(item => item.Actors):</b>
                    @Html.DisplayFor(item => item.Actors)
                </div>
                <div class="row">
                    <b> @Html.LabelFor(item => item.ReleaseDate):</b>
                    @Html.DisplayFor(item => item.ReleaseDate.Year)
                </div>
                <div class="row">
                    <b> @Html.LabelFor(item => item.Category):</b>
                    @Html.DisplayFor(item => item.Category)
                </div>
                <div class="row">
                    <b> @Html.LabelFor(item => item.Summery):</b>
                    @Html.DisplayFor(item => item.Summery)
                </div>
            </div>

        </div>
        <div class="row comments-content media-content">
            <h2>תגובות:</h2>
            @foreach (var comment in Model.Comments)
            {
                @Html.HiddenFor(item => comment.Id)
                <div class="row content-row">
                    <div class="col-md-2">@Html.DisplayFor(item => comment.Date)- @Html.DisplayFor(item => comment.User.UserName) </div>
                    <div class="col-md-5">
                       @Html.DisplayFor(item => comment.Title)
                    </div>
                    <div class="col-md-5">@Html.DisplayFor(item => comment.Content)
                    </div>
                </div>
            }
        </div>
    </div>
</body>


