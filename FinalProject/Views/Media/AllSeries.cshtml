@using FinalProject.Models
@model IEnumerable<FinalProject.Models.Media>

<body dir="rtl">
    <div class="site-content">
        <div class="row" style="height: 100%">
            <div class="col-md-12 content-column">
                @if (Model != null)
                {
                    foreach (var media in Model)
                    {
                        @Html.HiddenFor(item => media.Id)
                        <div class="row search-content-row">
                            <div class="col-md-7">
                                <div class="row">
                                    <div class="col-md-2">@Html.DisplayFor(item => media.ReleaseDate.Year)</div>
                                    <div class="col-md-10">@Html.ActionLink(media.HebrewTitle, "MediaDetails", "Media", new { id = media.Id }, null) (@Html.DisplayFor(item => media.EnglishTitle))</div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12" style="height: 170px">@Html.DisplayFor(item => media.Summery)</div>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <img style="width: 100%; height: 230px" src="data:image/png;base64,@Html.DisplayFor(item => media.Image)" />
                            </div>
                        </div>
                    }
                }
                else
                {
                    <h3><span>לא נמצאו סדרות.</span></h3>
                }
            </div>
        </div>
    </div>
</body>
