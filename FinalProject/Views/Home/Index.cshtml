@model IEnumerable<FinalProject.Models.IMedia>

<!DOCTYPE html>

<html lang="he">
<body dir="rtl">
    <div class="site-content">
        <div class="row">
            <div class="col-md-6">
                @foreach (var media in Model)
                {
                    if (media is FinalProject.Models.Movie)
                    {
                        <div class="row">
                            <div class="col-md-4"><img src="data:image/png;base64,@Html.DisplayFor(item => media.Image) " /></div>
                            <div class="col-md-5">@Html.DisplayFor(item => media.HebrewTitle)</div>
                            <div class="col-md-3">@Html.DisplayFor(item => media.ReleaseDate)</div>
                        </div>
                    }
                }
            </div>
            <div class="col-md-6">
                @foreach (var media in Model)
                {
                    if (media is FinalProject.Models.Series)
                    {
                        <div class="row">
                            <div class="col-md-4"><img src="data:image/png;base64,@Html.DisplayFor(item => media.Image)" /></div>
                            <div class="col-md-5">@Html.DisplayFor(item => media.HebrewTitle)</div>
                            <div class="col-md-3">@Html.DisplayFor(item => media.ReleaseDate)</div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</body>

</html>